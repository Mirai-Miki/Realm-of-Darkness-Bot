{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist/",
    "typeRoots": ["node_modules/@types"],
    "strict": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": false,
    "baseUrl": "./",
    "allowJs": true, // Allow JS files alongside TS
    "checkJs": false, // Don't type-check JS files by default
    "paths": {
      // Configure path aliases
      "@src/*": ["./src/*"],
      "@commands/*": ["./src/commands/*", "./commands/*"],
      "@modules/*": ["./src/modules/*", "./modules/*"],
      "@errors/*": ["./Errors/*"],
      "@api/*": ["./realmAPI/*"],
      "@constants/*": ["./Constants/*"]
    }
  },
  "include": [
    "src/**/*",
    "*.js",
    "commands/**/*",
    "modules/**/*",
    "Errors/**/*",
    "realmAPI/**/*",
    "scripts/deploy-commands.js"
  ],
  "exclude": ["node_modules", "dist"]
}
